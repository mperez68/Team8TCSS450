<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.BlogPostFragment">

        <TextView
            android:id="@+id/text_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Brown_DarkPrimary"
            android:padding="8dp"
            android:text="TextView"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="@color/Brown_Primary"
            app:layout_constraintBottom_toTopOf="@+id/text_timestamp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_sender" />

        <TextView
            android:id="@+id/text_timestamp"
            android:layout_width="370dp"
            android:layout_height="54dp"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="@color/Brown_Primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>