<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/temp_high_and_low_layout_root"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    tools:context=".ui.weather.WeatherTempHighAndLowFragment">

    <TextView
        android:id="@+id/temp_high_and_low_temperature_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/temperature_weather_prediction_card"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/high_temperature_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/high_temperature_weather_prediction_card"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_high_and_low_temperature_tab" />

    <TextView
        android:id="@+id/low_temperature_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/low_temperature_weather_prediction_card"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/high_temperature_reading"
        app:layout_constraintTop_toTopOf="@+id/high_temperature_tab" />

    <TextView
        android:id="@+id/high_temperature_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/temperature_reading_weather_prediction_card"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/high_temperature_tab"
        app:layout_constraintTop_toTopOf="@+id/high_temperature_tab" />

    <TextView
        android:id="@+id/low_temperature_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:text="@string/temperature_reading_weather_prediction_card"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/low_temperature_tab"
        app:layout_constraintTop_toTopOf="@+id/low_temperature_tab" />
</androidx.constraintlayout.widget.ConstraintLayout>