            android:text="Current Weather" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/twenty_four_hour_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24-Hour Forecast" />

        <com.google.android.material.tabs.TabItem
