<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hour_prediction_list_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.weather.forecast.hours.WeatherHourPredictionListFragment">

    <TextView
        android:id="@+id/hour_prediction_list_zipcode_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:text="@string/text_weatherhourlist_zipcode"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/hour_prediction_list_zipcode"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hour_prediction_list_zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:text="@string/text_weatherhourlist_zipcodequery"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hour_prediction_list_zipcode_tab"
        app:layout_constraintTop_toTopOf="@+id/hour_prediction_list_zipcode_tab" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hour_prediction_list_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hour_prediction_list_zipcode_tab"
        tools:context=".ui.weather.forecast.hours.WeatherHourPredictionListFragment"
        tools:listitem="@layout/fragment_weather_hour_prediction_card" />
</androidx.constraintlayout.widget.ConstraintLayout>