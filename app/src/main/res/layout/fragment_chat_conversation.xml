<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.conversation.ChatMessageFragment">

        <EditText
            android:id="@+id/text_msg_input"
            android:layout_width="295dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textShortMessage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@color/DarkPrimary"
            android:padding="8dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/list_root"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_root"
            android:layout_width="371dp"
            android:layout_height="601dp"
            app:layout_constraintBottom_toTopOf="@+id/text_msg_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:context="edu.uw.tcss450.team8tcss450.ui.chat.conversation.ChatMessageFragment"
            tools:listitem="@layout/fragment_chat_conversation_msg" />

        <Button
            android:id="@+id/button_send"
            android:layout_width="78dp"
            android:layout_height="39dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="602dp"
            android:layout_marginEnd="4dp"
            android:text="@string/button_chat_send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_msg_input"
            app:layout_constraintTop_toTopOf="@+id/list_root" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>