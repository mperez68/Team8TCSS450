<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outlook_layout_root"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    tools:context=".ui.weather.forecast.WeatherOutlookFragment">

    <TextView
        android:id="@+id/outlook_outlook_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_weatheroutlook_outlook"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/outlook_graphic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_weather_outlook_grey_60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlook_outlook_tab" />
</androidx.constraintlayout.widget.ConstraintLayout>